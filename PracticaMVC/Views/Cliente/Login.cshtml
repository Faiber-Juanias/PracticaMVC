@{
    ViewBag.Title = "Login";
}

<div>
    <form action="@Url.Action("RecibeLogin", "Cliente")" method="post">
        <div>
            <label>Usuario:</label>
            <label><input type="text" name="usuario" placeholder="Usuario" required /></label>
        </div>
        <div>
            <label>Contraseña:</label>
            <label><input type="password" name="contrasena" placeholder="Contraseña" required /></label>
        </div>
        <div>
            <label><input type="submit" name="envia_login" value="Login" /></label>
        </div>
    </form>
</div>
